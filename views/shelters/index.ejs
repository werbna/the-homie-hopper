<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Shelters</title>
</head>
<body>
  <%- include('../partials/_navbar') %>

  <h1>Shelters</h1>
  <ul>
    <% shelters.forEach(shelter => { %>
      <li>
        <a href="/shelters/<%= shelter._id %>"><%= shelter.name %></a>
        <a href="/shelters/<%= shelter._id %>/edit">Edit</a>
        <form action="/shelters/<%= shelter._id %>?_method=DELETE" method="POST" style="display:inline;">
          <button type="submit">Delete</button>
        </form>
      </li>
    <% }) %>
  </ul>
  <a href="/shelters/new">Add Shelter</a>
  
